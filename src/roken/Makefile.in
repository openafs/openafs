# The upstream snprintf.c has some pointer warnings in it
CFLAGS_snprintf.lo = @CFLAGS_NOERROR@

snprintf.lo: ${UPSTREAM}/snprintf.c ${HEADERS}
	$(LT_CCRULE) $(UPSTREAM)/snprintf.c

strlcat.lo: ${UPSTREAM}/strlcat.c ${HEADERS}
