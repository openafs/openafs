include @TOP_OBJDIR@/src/config/Makefile.config


# OS specific object files:
AFS_OS_OBJS = \
	osi_debug.o \
	osi_groups.o \
	osi_inode.o \
	osi_file.o \
	osi_misc.o \
	osi_sleep.o \
	osi_vnodeops.o \
	osi_vm.o

AFS_OS_NFSOBJS = \
<ia64_hpux1123 hp_ux1123>
	hpux_mod_nfs.modmeta.o \
